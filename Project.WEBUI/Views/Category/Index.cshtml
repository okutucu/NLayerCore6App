@model List<CategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h4>Category List</h4>
<a asp-controller="Category" asp-action="Save" class="btn btn-primary" > Yeni Kayıt oluştur.</a>




<table class="table table-striped">
    <thead>
       <tr>
        <td>Id</td>
        <td>Name</td>

        <td>Created Date</td>
        <td>Action</td>
       </tr>
    </thead>
    <tbody>
        @foreach (CategoryDto item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.Name</th>
                <th>@item.CreatedDate</th>
                <th>
                    <a asp-controller="Products" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                    <a asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </th>
            </tr>
        }

    </tbody>

</table>


