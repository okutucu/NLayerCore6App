@model List<ProductWithCategoryDto>


@{
    ViewData["Title"] = "Index";
}


<table class="table table-striped">
    <thead>
       <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Price</td>
        <td>Stock</td>
        <td>Category</td>
        <td>Created Date</td>
        <td>Action</td>
       </tr>
    </thead>
    <tbody>
        @foreach (ProductWithCategoryDto item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.Name</th>
                <th>@item.Price</th>
                <th>@item.Stock</th>
                <th>@item.Category.Name</th>
                <th>@item.CreatedDate</th>
                <th>
                    <a asp-controller="Products" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                    <a asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </th>
            </tr>
        }

    </tbody>

</table>

